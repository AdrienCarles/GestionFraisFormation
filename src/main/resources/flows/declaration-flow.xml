<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      id="declaration-flow"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow.xsd">

    <!-- Début du flow -->
    <view-state id="start" view="declaration/declaration-form">
        <transition on="next" to="formation"/>
    </view-state>

    <!-- Étape 1 : Détails de la formation -->
    <view-state id="formation" view="declaration/formation">
        <transition on="next" to="transport"/>
        <transition on="back" to="start"/>
    </view-state>

    <!-- Étape 2 : Transport -->
    <view-state id="transport" view="declaration/transport">
        <transition on="next" to="recapitulatif"/>
        <transition on="back" to="formation"/>
    </view-state>


    <!-- Étape 7 : Récapitulatif -->
    <view-state id="recapitulatif" view="declaration/recapitulatif">
        <transition on="submit" to="confirmation"/>
        <transition on="back" to="transport"/>
    </view-state>

    <!-- Étape 8 : Confirmation -->
    <view-state id="confirmation" view="declaration/confirmation">
        <transition on="finish" to="end"/>
    </view-state>

    <end-state id="end"/>
</flow>
